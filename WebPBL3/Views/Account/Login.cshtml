@model WebPBL3.ViewModel.LoginVM;

<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-8">
                    <form class="bg-white rounded shadow-5-strong p-5" method="post" asp-action="Login">
                        <h3 class="mb-3 text-center text-uppercase">Đăng nhập</h3>
                        @if (TempData["Error"] != null)
                        {
                            <div class="text-danger">
                                <span><b>Xin lỗi!</b> - @TempData["Error"] </span>
                            </div>
                        }
                        <!-- Email input -->
                        <div class="form-group">
                            <label for="email" asp-for="Email">Email:</label>
                            <span asp-validation-for="Email" class="text-danger d-block"></span>
                            <input type="email" class="form-control" id="email" asp-for="Email">
                        </div>
                        <!-- Password input -->
                        <div class="form-group">
                            <label for="pwd" asp-for="Password">Mật khẩu:</label>
                            <span asp-validation-for="Password" class="text-danger d-block"></span>
                            <input type="password" class="form-control" id="pwd" asp-for="Password">
                        </div>
                        <div class="row mb-4">
                            <div class="col d-flex justify-content-space-bettween">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="form1Example3"
                                           checked />
                                    <label class="form-check-label" for="form1Example3">
                                        Ghi nhớ đăng nhập
                                    </label>
                                </div>
                            </div>
                            <div class="col text-right ">
                                <a href="#!" class="text-dark">Quên mật khẩu?</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger  btn-block" data-mdb-ripple-init>
                            Đăng
                            nhập
                        </button>
                        <p class="text-center text-muted mt-4 mb-0">
                            Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account")"
                                                      class="fw-bold text-body"><u>Đăng kí ngay</u></a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>