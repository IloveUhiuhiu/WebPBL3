@model List<Car>
@{	
    ViewData["Title"] = "Quản lý ô tô";
	Layout = "_AdminLayout";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách sản phẩm</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end" style="text-align: right;">
                <a asp-controller="Car" asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>  Thêm sản phẩm
                </a>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Ảnh
                    </th>
                    <th>
                        Tên xe
                    </th>
                    <th>
                        Thương hiệu
                    </th>
                     <th>
                        Giá
                    </th>
                     <th>
                        Số chỗ ngồi
                    </th>
                     <th>
                        Số lượng
                    </th>
                    

                </tr>
            </thead>
            <tbody>
                
                @foreach (var obj in Model.OrderBy(u => u.CarID))
                {
                    <tr>
                        <td>@int.Parse(obj.CarID)</td>
                        <td>
                            <img src=@obj.Photo width="100" height=auto />
                        </td>
                        <td>
                            @obj.CarName
                        </td>
                        <td>
                            @obj.Make
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.Seat
                        </td>
                        <td>
                            @obj.Quantity
                        </td>
                       

                        <td>
                            <div class="w-75 d-flex justify-content-around btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CarID" class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i>
                                    Chi tiết
                                </a>
                                
                                <!-- Sử dụng icon pen cho Cập nhật -->
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CarID" class="btn btn-warning">
                                    <i class="fa-solid fa-pen-to-square"></i> 
                                    Cập nhật
                                </a>

                                <!-- Sử dụng icon trash cho Xóa -->
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CarID" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                    Xóa
                                </a>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
            
     
