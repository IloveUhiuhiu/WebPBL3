@model List<Feedback>
@section OrderStyles {
    <link href="/admin_css/order.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Quản lý phản hồi";
    Layout = "_AdminLayout";
    int count = 1;
}
<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách các phản hồi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3 mb-2">
            @using (Html.BeginForm("FilterOrder", "Order", FormMethod.Get, new { @class = "col-6", @id = "myForm" }))
            {
                <div class="col-12 d-flex justify-content-around align-item-center">
                    <div class="input-group col-6">
                        <input name="idUser" value="@ViewBag.idUser" type="text" class="form-control" placeholder="Tìm kiếm hóa đơn" />
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <a id="submitForm"><i class="fa-solid fa-magnifying-glass"></i></a>
                            </div>
                        </div>
                    </div>
                    <select name="status" class="form-select" title="status" onchange="this.form.submit()">
                        <option value="" selected>Tình trạng</option>
                        @if (ViewBag.status == "Đã xem")
                        {
                            <option value="Đã xem" selected>Đã xem</option>
                        }
                        else
                        {
                            <option value="Đã xem">Đã xem</option>
                        }
                        @if (ViewBag.status == "Chưa thanh toán")
                        {
                            <option value="Chưa xem" selected> Chưa xem</option>
                        }
                        else
                        {
                            <option value="Chưa xem"> Chưa xem</option>
                        }
                    </select>
                </div>
            }
        </div>

        <table class="table table-striped">
            <thead>

                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Tiêu đề
                    </th>
                    <th>
                        Nội dung
                    </th>
                    <th>
                        Ngày gửi
                    </th>
                    <th>
                        Đánh giá
                    </th>
                    <th>
                        Tình trạng
                    </th>
                    <th>
                        
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@(count++)</td>
                        <td>@obj.Title</td>
                        <td>@obj.Content</td>
                        <td>@obj.CreateAt</td>
                        <td>
                            @for(int i = 0; i < obj.Rating; i++)
                            {
                                <i class="fa-solid fa-star" id="star"></i>
                            }
                            @for(int i = obj.Rating; i < 5; i++)
                            {
                                <i class="fa-regular fa-star" id="star"></i>
                            }
                        </td>
                        <td>@obj.Status</td>
                        <td>
                            <div class="w-75 d-flex justify-content-around btn-group" role="group">
                                <a class="btn btn-outline-success">
                                    <i class="fa-solid fa-eye"></i>
                                    Chi tiết
                                </a>
                                <a class="btn btn-warning">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                        Cập nhật
                                </a>
                                <a class="btn btn-danger" id="deleteButton" asp-controller="Contact" asp-action="DeleteFeedback" asp-route-id="@obj.FeedbackID">
                                        <i class="fa-solid fa-trash"></i>
                                        Xóa
                                 </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>